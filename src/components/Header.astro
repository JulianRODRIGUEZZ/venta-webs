---
const phone = "50768059285"; // número de WhatsApp con indicativo de país
const message = "Hola, quiero más información para crear mi pagina web"; // mensaje inicial
const url = `https://wa.me/${phone}?text=${encodeURIComponent(message)}`;
---

<!-- Desktop Header -->
<header
  class="fixed top-4 left-1/2 z-[9999] hidden w-full max-w-5xl -translate-x-1/2 
         flex-row items-center justify-between rounded-2xl 
         bg-white/20 backdrop-blur-xl border border-white/10 shadow-lg 
         transition-all duration-300 px-6 py-3 md:flex"
>
  <!-- Logo -->
  <a
    class="z-50 flex items-center justify-center gap-2"
    href="https://www.bytedigitalstudio.com/"
    target="_blank"
    rel="noopener noreferrer"
  >
    <img src="/logo-byte.png" aria-hidden="true" class="h-5 me-3" />
  </a>

  <!-- Desktop Nav -->
  <nav class="absolute inset-0 hidden flex-1 flex-row items-center justify-center space-x-6 
              text-sm font-medium text-gray-300 transition duration-200 md:flex">
    <a href="#hero" class="relative px-3 py-2 hover:text-white transition-colors">Home</a>
    <a href="#services" class="relative px-3 py-2 hover:text-white transition-colors">Servicios</a>
    <a href="#portafolio" class="relative px-3 py-2 hover:text-white transition-colors">Portafolio</a>
    <a href="#plans" class="relative px-3 py-2 hover:text-white transition-colors">Planes</a>
  </nav>

  <!-- Desktop Actions -->
  <div class="flex items-center gap-4">
    <a
      href={url}
      class="rounded-lg font-bold relative cursor-pointer hover:-translate-y-0.5 transition duration-200 
             inline-block text-center bg-gradient-to-r from-orange-500/90 to-orange-600/90 
             text-white shadow-md px-4 py-2 text-sm"
    >
      Contactanos
    </a>
  </div>
</header>

<!-- Mobile Header -->
<header
  class="sticky top-4 z-[9999] mx-4 flex w-auto flex-row items-center justify-between 
         rounded-2xl bg-white/10 backdrop-blur-xl border border-white/20 shadow-lg 
         md:hidden px-4 py-3"
>
  <!-- Logo -->
  <a
    class="flex items-center justify-center gap-2"
    href="https://www.bytedigitalstudio.com/"
    target="_blank"
    rel="noopener noreferrer"
  >
    <img src="/logo-byte.png" alt="Logo" class="h-6" />
  </a>

  <!-- Toggle button -->
  <button
    id="menu-toggle"
    class="flex items-center justify-center w-10 h-10 rounded-full bg-white/10 border border-white/20 
           transition-colors hover:bg-white/20"
    aria-label="Toggle menu"
  >
    <div class="flex flex-col items-center justify-center w-5 h-5 space-y-1">
      <span class="block w-4 h-0.5 bg-white transition-all duration-300"></span>
      <span class="block w-4 h-0.5 bg-white transition-all duration-300"></span>
      <span class="block w-4 h-0.5 bg-white transition-all duration-300"></span>
    </div>
  </button>
</header>

<!-- Mobile Menu (oculto por defecto) -->
<nav
  id="mobile-menu"
  class="fixed top-20 right-4 left-4 z-[9998] hidden flex-col space-y-4 rounded-2xl 
         bg-white/10 backdrop-blur-xl border border-white/20 shadow-lg p-6 text-center"
>
  <a href="#hero" class="block px-3 py-2 text-white/80 hover:text-white transition">Home</a>
  <a href="#services" class="block px-3 py-2 text-white/80 hover:text-white transition">Servicios</a>
  <a href="#portafolio" class="block px-3 py-2 text-white/80 hover:text-white transition">Portafolio</a>
  <a href="#plans" class="block px-3 py-2 text-white/80 hover:text-white transition">Planes</a>
  <a href={url} class="block px-3 py-2 text-orange-400 font-bold hover:text-orange-300">Contactanos</a>
</nav>

<script>
  const toggle = document.getElementById("menu-toggle");
  const menu = document.getElementById("mobile-menu");

  if (toggle && menu) {
    toggle.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  }
</script>

