---
const services = [
  {
    title: "Desarrollo Web",
    description: "Sitios web y aplicaciones web personalizados creados con tecnologías de vanguardia",
    features: ["React & Next.js", "Full-Stack Development", "API Integration", "Database Design"],
    price: "Starting at $5,000",
    color: "emerald",
  },
  
  {
    title: "SEO & Marketing Digital",
    description: "Aumente su presencia en línea y atraiga tráfico orgánico a su negocio",
    features: ["Optimización SEO", "Estrategia de Conetnido", "Configuración de análisis", "Seguimiento del rendimiento"],
    price: "Starting at $2,000/mo",
    color: "purple",
  },
 
  {
    title: "E-commerce Development",
    description: "Tiendas online completas con procesamiento de pagos y gestión de inventario",
    features: ["Shopify/Personalizado", "Integración de pagos", "Gestion de inventario", "Procesamiento de pedidos"],
    price: "Starting at $7,000",
    color: "orange",
  },
]

const processSteps = [
  { step: "01", title: "Discovery Call", description: "We discuss your project requirements and goals" },
  { step: "02", title: "Proposal & Planning", description: "Detailed project scope and timeline delivered" },
  { step: "03", title: "Development", description: "Regular updates and milestone deliveries" },
  { step: "04", title: "Launch & Support", description: "Go live with ongoing maintenance and support" },
]
---

<section class="pt-32 pb-20 px-4"id="services">
  <div class="max-w-6xl mx-auto">
    <!-- Hero -->
    <div  class="text-center mb-8" >
      <h2 id="main-title" class="text-4xl font-bold tracking-tight text-gray-300 sm:text-6xl lg:text-6xl" >
        Nuestros <strong>Servicios</strong>
      </h2>
    </div>

    <!-- Services -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20 py-14">
  {services.map((service, index) => (
    <div
      class={`group relative ${
        index >= services.length - 2 ? "md:col-span-1 lg:col-span-1 mx-auto" : ""
      }`}
    >
      <!-- Fondo líquido estilo iOS -->
      <div class="absolute inset-0 -z-10 overflow-hidden rounded-2xl">
        <div
          class={`absolute inset-0 bg-gradient-to-tr from-${service.color}-400 via-${service.color}-600 to-${service.color}-800 opacity-70 blur-3xl animate-liquid`}
        ></div>
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_30%,rgba(255,255,255,0.25),transparent_60%)] mix-blend-overlay animate-pulse"></div>
      </div>

      <!-- Card con liquid glass -->
      <div
        class="relative bg-white/10 backdrop-blur-2xl border border-white/10 rounded-2xl p-8 h-full overflow-hidden shadow-lg hover:shadow-lg hover:scale-[1.02] transition-all duration-500"
      >
        <div class="relative z-10">
          <div
            class={`icon text-${service.color}-300 mb-6 w-10 h-10 flex items-center justify-center rounded-full bg-${service.color}-500/20`}
          ></div>
          <h3 class="text-2xl font-bold text-white mb-4">{service.title}</h3>
          <p class="text-gray-200 mb-6 leading-relaxed">{service.description}</p>

          <div class="space-y-2 mb-6">
            {service.features.map((feature) => (
              <div class="flex items-center text-sm text-gray-200">
                <div class="w-2.5 h-2.5 bg-emerald-400 rounded-full mr-2"></div>
                {feature}
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  ))}
</div>

  </div>
</section>

<style>
  @keyframes liquid {
    0% {
      transform: scale(1) translate(0, 0);
      border-radius: 40% 60% 70% 30% / 40% 30% 70% 60%;
    }
    50% {
      transform: scale(1.1) translate(-5%, 5%);
      border-radius: 60% 40% 30% 70% / 60% 70% 30% 40%;
    }
    100% {
      transform: scale(1) translate(0, 0);
      border-radius: 40% 60% 70% 30% / 40% 30% 70% 60%;
    }
  }
  .animate-liquid {
    animation: liquid 15s ease-in-out infinite;
  }
</style>


<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

<script>
  
  import AOS from 'aos';
  
  document.addEventListener('DOMContentLoaded', () => {
    AOS.init({
      duration: 800,
      once: true,
      offset: 100
    });
  });
</script>


