---

<section id="portafolio" class="py-40 px-4 ">
  <div class="container mx-auto">
    <div class="text-center mb-16">
      <h2 id="main-title" class="text-4xl font-bold tracking-tight sm:text-6xl lg:text-6xl text-gray-300">
        Nuestro Portafolio
      </h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Algunos de los proyectos exitosos que hemos desarrollado para nuestros
        clientes
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div
          class="bg-white/20 backdrop-blur-xl border border-white/10 rounded-2xl overflow-hidden border border-gray-700 hover:border-orange-600/50 transition-all duration-300 group"
        >
          <!-- Imagen con overlay -->
          <div class="relative overflow-hidden">
            <img
              src={project.image}
              alt={project.alt}
              class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300"
            />
            <div
              class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center"
            >
              <div class="flex space-x-4">
                <!-- Eye Icon con link -->
                <a
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-2 bg-orange-600 rounded-full text-white hover:bg-orange-700 transition-colors"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="h-5 w-5"
                  >
                    <path
                      d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0"
                    ></path>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>
                </a>

               
              </div>
            </div>
          </div>

          <!-- Info -->
          <div class="p-6">
            <div class="flex items-center justify-between mb-2">
              <span class="text-orange-400 text-sm font-medium">
                {project.category}
              </span>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">{project.title}</h3>
            <p class="text-gray-300">{project.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
